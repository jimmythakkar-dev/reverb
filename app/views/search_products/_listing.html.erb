<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Category</th>
      </tr>
    </thead>
    
    <tbody class="tbody-list">
    	<tbody class="tbody-list">
    		<% products_listings.each do |product| %>
					<tr>
						<td><%= product["id"] %></td>
						<td><%= product["title"] %></td>
						<td><%= product["categories"][0]["full_name"] %></td>
					</tr>
				<% end %>
    	</tbody> 
    </tbody>
  </table>
  <% unless products_listings.present? %>
    <span class="badge alert-danger">Results not found</span>
  <% end %>
</div>

<div class="row">
  <div class="col-md-6">
    <%= paginate products_listings %>
  </div>
</div>